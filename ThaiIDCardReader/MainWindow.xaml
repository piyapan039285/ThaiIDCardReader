<Window x:Class="ThaiIDCardReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThaiIDCardReader"
        mc:Ignorable="d"
        Title="Thai ID Card Reader" Height="542.578" Width="800">
  <Grid>
    <Button x:Name="ReadCardBtn" Content="Read Card" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Read_ID_Card_Click" FontSize="15" FontFamily="Tahoma"/>
    <RichTextBox x:Name="CardData" Margin="10,40,10,10" FontSize="20" IsReadOnly="True" FontFamily="Tahoma">
      <FlowDocument>
        <Paragraph>
          <Run Text=""/>
        </Paragraph>
      </FlowDocument>
    </RichTextBox>
    <Label x:Name="ProgressLabel" Content="" Margin="100,7,10,0" VerticalAlignment="Top" FontSize="15" FontFamily="Tahoma"/>

  </Grid>
</Window>
